<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Búsqueda">
        <SwitchPreferenceCompat
            app:key="pref_busqueda_automatica"
            app:title="Búsqueda automática" />
        <EditTextPreference
            app:key="pref_texto_por_defecto"
            app:title="Texto por defecto"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="Buscadores">
        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/buscadores"
            app:entryValues="@array/urls"
            app:key="pref_buscador_predeterminado"
            app:title="Buscador predeterminado"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>